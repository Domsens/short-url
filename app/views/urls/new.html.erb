<% provide(:title, 'Create short url') %>
<h1>Create url</h1>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= form_for(@url) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
    
        <%= f.label :short_url, "Short URL" %>
        <%= f.text_field :short_url, class: 'form-control' %>
      
        <%= f.label :original_url, "Original URL" %>
        <%= f.url_field :original_url, class: 'form-control' %>
      
        <%= f.submit "Create short URL", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
